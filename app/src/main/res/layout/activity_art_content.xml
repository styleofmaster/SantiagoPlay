<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/art_content_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="safaffsdfs"
            android:textSize="30sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/art_content_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="xxxx-xx-xx" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="by" />

            <TextView
                android:id="@+id/art_content_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="xcvbnmnb" />

        </LinearLayout>

        <ImageView
            android:id="@+id/art_content_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:src="@mipmap/ic_launcher" />

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:cardElevation="3dp">

            <TextView
                android:id="@+id/art_content_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#eeeeee"
                android:padding="5dp"
                android:text="ddddddddddd"
                android:textSize="15sp" />
        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/art_content_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="aaaaaaaaaaaaaaaaaaaaasssssssssssd" />
    </LinearLayout>
</ScrollView>